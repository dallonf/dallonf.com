---
export interface Props {
  skills: { name: string; iconUrl: string }[];
}

const { skills } = Astro.props as Props;
---

<ul class="skill-list">
  {
    skills.map((skill) => {
      return (
        <li class="skill-entry">
          <img src={skill.iconUrl} alt="" />
          <span class="skill-name">{skill.name}</span>
        </li>
      );
    })
  }
</ul>

<style>
  .skill-list {
    margin-top: var(--size-fluid-3);
    display: flex;
    flex-flow: row wrap;
    column-gap: var(--size-fluid-5);
    row-gap: var(--size-fluid-2);
    justify-content: center;
  }

  .skill-entry {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .skill-entry > img {
    block-size: var(--size-fluid-5);
  }

  .skill-name {
    display: block;
    margin-top: var(--size-fluid-1);
    color: var(--color-text-darkish);
  }
</style>
