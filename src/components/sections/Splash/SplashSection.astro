---
import { Picture } from "astro:assets";
import SectionContainer from "@components/SectionContainer.astro";
import photo from "./photo.jpg";
---

<SectionContainer id="splash" padding={false}>
  <div class="layout">
    <Picture
      src={photo}
      alt="Dallon Feldner"
      widths={[1500, 1000, 680, 450, 300]}
      sizes="(min-width: 768px) 50vw, 100vw"
    />
    <div class="info">
      <h1>Dallon Feldner</h1>
      <p class="subtitle">Senior Software Engineer</p>
      <a class="button" href="#contact">Get in touch</a>
    </div>
  </div>
</SectionContainer>

<style>
  .layout {
    text-align: center;
    padding-bottom: var(--size-fluid-5);
  }

  h1 {
    font-family: var(--accent-font);
    font-weight: bold;
    font-size: var(--font-size-fluid-3);
    margin-top: var(--size-fluid-2);
  }

  .subtitle {
    font-size: var(--font-size-fluid-2);
  }

  .button,
  .button:is(:visited) {
    display: inline-block;
    color: var(--color-text-light);
    text-decoration: none;
    background: var(--color-bg-dark);
    margin-top: var(--size-fluid-4);
    padding: var(--size-fluid-2);
  }

  picture img {
    object-fit: cover;
    max-height: 60vh;
    background-color: var(--color-bg-tan);
    color: transparent;
  }

  @media (--md-n-above) {
    .layout {
      flex: 1;
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding: 0;
    }

    picture {
      align-self: stretch;
      width: 100%;
      display: flex;
    }

    picture img {
      object-fit: cover;
      height: auto;
      max-height: 100vh;
      width: 100%;
    }

    .info {
      align-self: center;
      padding-top: var(--size-fluid-5);
      padding-bottom: var(--size-fluid-5);
      padding-left: var(--size-fluid-5);
      padding-right: var(--size-fluid-5);
    }

    h1 {
      font-size: var(--font-size-fluid-2);
    }

    .subtitle {
      font-size: var(--font-size-fluid-1);
    }
  }

  @media (--xl-n-above) {
    h1 {
      font-size: var(--font-size-fluid-3);
    }

    .subtitle {
      font-size: var(--font-size-fluid-2);
    }

    .button {
      padding-left: var(--size-fluid-5);
      padding-right: var(--size-fluid-5);
    }
  }
</style>
