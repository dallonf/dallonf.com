---
import SectionContainer from "@components/SectionContainer.astro";
import ReactExperience from "./ReactExperience.astro";
---

<SectionContainer id="skills" padding={false}>
  <div class="layout">
    <h2 class="heading">Skills & Proficiencies</h2>
    <div class="react-bg"></div>
    <div class="react-side">
      <ReactExperience />
    </div>
    <div class="other-side"></div>
  </div>
</SectionContainer>

<style>
  .layout {
    flex: 1;
    display: grid;
    grid-template: [react-bg-start] "heading" "react" [react-bg-end other-bg-start] "other" [other-bg-end] / [react-bg-start other-bg-start] 1fr [react-bg-end other-bg-end];
    /* grid-template-columns: [heading-start react-start react-content-start other-start other-content-start] 1fr [react-end react-content-end other-end other-content-end heading-end];
    grid-template-rows:
      [heading-start react-start] auto [heading-end] var(--size-fluid-1)
      [react-content-start] auto [react-content-react-end other-start] auto [other-end]; */
  }

  .heading {
    grid-area: heading;
    padding-top: var(--size-fluid-2);
    padding-left: var(--size-fluid-4);
    padding-right: var(--size-fluid-4);
    color: var(--color-text-light);
    z-index: 2;
  }

  .react-bg {
    grid-column: react-bg-start / react-bg-end;
    grid-row: react-bg-start / react-bg-end;
    /* hardcode react bg color */
    background: #222222;
    background-image: url(./react.svg);
    background-size: 10rem 8.9rem;
    background-repeat: no-repeat;
    background-position: bottom -1.9rem left -1.9rem;
  }

  .react-side {
    grid-area: react;
    color: var(--color-text-light);
    padding-top: var(--size-fluid-2);
    padding-left: var(--size-fluid-4);
    padding-right: var(--size-fluid-4);
    padding-bottom: 6rem;
    display: flex;
    flex-direction: column;
  }

  .other-side {
    grid-area: other;
  }

  h2 {
    font-family: var(--accent-font);
    font-weight: bold;
    font-size: var(--font-size-fluid-2);
  }

  @media (--lg-n-above) {
    .layout {
      --half-section: calc(var(--max-section-width) / 2);
      grid-template:
        [react-bg-start other-bg-start] ". heading . ." ". react other ." [react-bg-end other-bg-end] /
        [react-bg-start] 1fr min(50%, var(--half-section))
        [react-bg-end other-bg-start] min(
          50%,
          var(--half-section)
        ) auto [other-bg-end];
    }
  }
</style>
